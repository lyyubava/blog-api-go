apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend-deployment
  labels:
    app: backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: blog-api
  template:
    metadata:
      labels:
        app: blog-api
    spec:
      containers:
      - name: blog-api
        image: {{ IMAGE }}
        ports:
        - containerPort: 8080
      restartPolicy: Always

---

apiVersion: v1
kind: Service
metadata:
    labels:
        app: blog-api
    name: blog-api-service
spec:
    ports:
    - port: 80
      protocol: TCP
      targetPort: 8080
    selector:
        app: blog-api
    type: ClusterIP