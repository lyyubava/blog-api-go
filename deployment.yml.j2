apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend-deployment
  labels:
    app: backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: blog-api
  template:
    metadata:
      labels:
        app: blog-api
    spec:
      containers:
      - name: blog-api
        image: {{ image }}
        ports:
        - containerPort: {{ api_port }}
        env:
          - name: API_SECRET
            value: "{{ api_secret }}"
          - name: TOKEN_HOUR_LIFESPAN
            value: "{{ token_hour_lifespan }}"
          - name: DATABASE_CONNECTION_STRING
            value: "{{ database_connection_string }}"
          - name: API_PORT
            value: "{{ api_port }}"
          - name: PROJECT_ID
            value: "{{ project_id }}"        
          - name: PUBSUB_TOPIC
            value: "{{ pubsub_topic }}"
          - name: SERVICE_ACCOUNT_KEY
            value: "{{ service_account_key }}" 
      restartPolicy: Always

---
apiVersion: v1
kind: Service
metadata:
    labels:
        app: blog-api
    name: blog-api-service
spec:
    ports:
    - port: 80
      protocol: TCP
      targetPort: 8080
    selector:
        app: blog-api
    type: ClusterIP